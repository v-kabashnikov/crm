<h1 style ="text-align: center">События</h1>

<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>Описание</th>
      <th>Ссылка</th>
      <th>Дата и время</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= "Пользователь #{User.find_by_id(Event.first.user_id).name} оставил #{event.event_type} \"#{event.content}\" " %></td>
        <td><%= link_to("посмотреть", "#{event.link}") %></td>
        <td><%= event.created_at.to_s(:db)%> </td>
        <td><%= link_to 'Удалить', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

